<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Herencia de la vista 'purchase.report_purchaseorder_document' -->
        <template id="report_purchaseorder_document_inherit" inherit_id="purchase.report_purchaseorder_document">
            <xpath expr="//th[@name='th_price_unit']" position="attributes">
                <attribute name="t-if">not o.partner_id.purchase_without_price</attribute>
            </xpath>
            <xpath expr="//span[@t-field='line.price_unit']/ancestor::td" position="attributes">
                <attribute name="t-if">not o.partner_id.purchase_without_price</attribute>
            </xpath>
            <xpath expr="//th[@name='th_discount']" position="attributes">
                <attribute name="t-if">not o.partner_id.purchase_without_price</attribute>
            </xpath>
            <xpath expr="//span[@t-field='line.discount']/ancestor::td" position="attributes">
                <attribute name="t-if">not o.partner_id.purchase_without_price</attribute>
            </xpath>
            <xpath expr="//th[@name='th_taxes']" position="attributes">
                <attribute name="t-if">not o.partner_id.purchase_without_price</attribute>
            </xpath>
            <xpath expr="//span[@t-out='taxes']/ancestor::td" position="attributes">
                <attribute name="t-if">not o.partner_id.purchase_without_price</attribute>
            </xpath>
            <xpath expr="//th[@name='th_subtotal']" position="attributes">
                <attribute name="t-if">not o.partner_id.purchase_without_price</attribute>
            </xpath>
            <xpath expr="//span[@t-field='line.price_subtotal']/ancestor::td" position="attributes">
                <attribute name="t-if">not o.partner_id.purchase_without_price</attribute>
            </xpath>
            <xpath expr="//div[@id='total']" position="attributes">
                <attribute name="t-if">not o.partner_id.purchase_without_price</attribute>
            </xpath>
        </template>
    </data>
</odoo>
