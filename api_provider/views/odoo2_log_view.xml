<odoo>
    <record id="view_odoo2_log_tree" model="ir.ui.view">
        <field name="name">odoo2.log.tree</field>
        <field name="model">odoo2.log</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="token_used"/>
                <field name="odoo1_config_id"/>
            </tree>
        </field>
    </record>

    <record id="view_odoo2_log_form" model="ir.ui.view">
        <field name="name">odoo2.log.form</field>
        <field name="model">odoo2.log</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="token_used"/>
                        <field name="odoo1_config_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <menuitem id="menu_odoo2_log" name="Logs"
              parent="menu_odoo2_root" sequence="30"
              action="action_odoo2_log"/>

    <record id="action_odoo2_log" model="ir.actions.act_window">
        <field name="name">Log</field>
        <field name="res_model">odoo2.log</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
