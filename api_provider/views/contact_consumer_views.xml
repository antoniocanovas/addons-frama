<!-- views/contact_consumer_views.xml -->
<odoo>
    <record id="view_contact_consumer_tree" model="ir.ui.view">
        <field name="name">contact.consumer.tree</field>
        <field name="model">contact.consumer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
            </tree>
        </field>
    </record>

    <record id="view_contact_consumer_action" model="ir.actions.act_window">
        <field name="name">Contact Consumer</field>
        <field name="res_model">contact.consumer</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem id="menu_contact_consumer" name="Contact Consumer" action="view_contact_consumer_action"/>
</odoo>
